<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFA726"
                android:endColor="#FB8C00"
                android:angle="90" />
            <corners android:radius="40dp" />
            <padding android:left="20dp" android:right="20dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFCC80"
                android:endColor="#FFA726"
                android:angle="90" />
            <corners android:radius="40dp" />
            <shadowColor android:color="#88000000"/>
            <padding android:left="20dp" android:right="20dp" />
        </shape>
    </item>
</selector>

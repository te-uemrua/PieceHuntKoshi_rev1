<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">

    <!-- メモ: <solid android:color="..."> の色は、
         他のボタンの背景色（bordered_button_background）と合わせてください。
         ここでは仮に @color/origin_blue を指定しています。 -->

    <item android:duration="150">
        <shape android:shape="rectangle">
            <solid android:color="@color/origin_blue" />
            <stroke android:width="4dp" android:color="#FF0000" /> <!-- 赤 -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:duration="150">
        <shape android:shape="rectangle">
            <solid android:color="@color/origin_blue" />
            <stroke android:width="4dp" android:color="#FF7F00" /> <!-- オレンジ -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:duration="150">
        <shape android:shape="rectangle">
            <solid android:color="@color/origin_blue" />
            <stroke android:width="4dp" android:color="#FFFF00" /> <!-- 黄 -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:duration="150">
        <shape android:shape="rectangle">
            <solid android:color="@color/origin_blue" />
            <stroke android:width="4dp" android:color="#00FF00" /> <!-- 緑 -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:duration="150">
        <shape android:shape="rectangle">
            <solid android:color="@color/origin_blue" />
            <stroke android:width="4dp" android:color="#0000FF" /> <!-- 青 -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:duration="150">
        <shape android:shape="rectangle">
            <solid android:color="@color/origin_blue" />
            <stroke android:width="4dp" android:color="#9400D3" /> <!-- 紫 -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</animation-list>
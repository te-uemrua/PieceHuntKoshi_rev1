<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"

    android:background="@drawable/glass_card"

    android:minWidth="280dp">

 

    <!-- タイトル（施設名） -->
    <TextView
        android:id="@+id/info_window_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ランドマーク名"
        android:textColor="@color/origin_orange"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- ★★★ 説明文（これが表示されるようになります） ★★★ -->
    <TextView
        android:id="@+id/info_window_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ここに施設の説明文が入ります。"
        android:textColor="@color/origin_blue"
        android:textSize="14sp"
        android:maxLines="3" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    tools:context=".shake_phone">

    <ImageView
        android:id="@+id/image_top"
        android:layout_width="250dp"
        android:layout_height="124dp"
        app:layout_constraintBottom_toTopOf="@id/image_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/piece_origin" />

    <ImageView
        android:id="@+id/image_center"
        android:layout_width="296dp"
        android:layout_height="276dp"
        app:layout_constraintTop_toBottomOf="@id/image_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/instruction_text"

        app:srcCompat="@drawable/shake" />

    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="スマホを振れ！！"
        android:textColor="@color/black"

        android:textSize="23sp"

        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>